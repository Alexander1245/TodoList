<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TitleTextViewStyle" parent="AppTextViewStyle">
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="SingleLineTextView" parent="AppTextViewStyle">
        <item name="android:lines">1</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="SingleLineDescription" parent="SingleLineTextView">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="DialogTitleTextView" parent="SingleLineTextView">
        <item name="android:textSize">@dimen/dialog_title_text_size</item>
    </style>

    <style name="BoldTextView" parent="AppTextViewStyle">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BoldSingleLineTextView" parent="SingleLineTextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargeButton" parent="Widget.Material3.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/large_button_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/large_button_margin_horizontal</item>
    </style>

    <style name="LargeImageView">
        <item name="android:layout_height">@dimen/large_image_size</item>
        <item name="android:layout_width">@dimen/large_image_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TransparentButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="LargeDivider" parent="Widget.Material3.MaterialDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:layout_marginStart">@dimen/divider_horizontal_margins</item>
        <item name="android:layout_marginEnd">@dimen/divider_horizontal_margins</item>
    </style>

    <style name="ImageIcon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/calendar_padding</item>
        <item name="android:contentDescription">@string/icon</item>
    </style>
</resources>